generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Actor {
  id          String   @id @default(uuid())
  firstName   String
  lastName    String
  bio         String?
  dateOfBirth DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  name       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
